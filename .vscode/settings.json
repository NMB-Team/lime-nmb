{
	"haxe.configurations": [["--cwd", "tools", "tools.hxml"]],

	"[haxe][json]": {
		"editor.formatOnSave": true,
		"editor.formatOnPaste": true
	},
	"[haxe]": {
		"editor.defaultFormatter": "nadako.vshaxe"
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	"haxe.enableCompilationServer": false,
	"haxe.displayPort": "auto",
	"haxe.enableServerView": true,
	"haxe.disableInlineValue": true,

	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"editor.tabSize": 4,
	"editor.trimAutoWhitespace": true,

	"files.trimTrailingWhitespace": true,
	"files.trimFinalNewlines": true,
	"files.eol": "\n",

	"haxecheckstyle.configurationFile": "checkstyle.json",
	"haxecheckstyle.sourceFolders": ["src"],
	"haxecheckstyle.codeSimilarityBufferSize": 100,

	"indentRainbow.updateDelay": 25,

	"colorful-comments-refreshed.tags": [
		{
			"tag": "!",
			"color": "#FF2D00",
			"strikethrough": false,
			"backgroundColor": "transparent"
		},
		{
			"tag": "?",
			"color": "#3498DB",
			"strikethrough": false,
			"backgroundColor": "transparent"
		},
		{
			"tag": "//",
			"color": "#474747",
			"strikethrough": true,
			"backgroundColor": "transparent"
		},
		{
			"tag": "^",
			"color": "#EAF622",
			"strikethrough": false,
			"backgroundColor": "transparent"
		},
		{
			"tag": "*",
			"color": "#98C379",
			"strikethrough": false,
			"backgroundColor": "transparent"
		},
		{
			"tag": "&",
			"color": "#FF06A0",
			"strikethrough": false,
			"backgroundColor": "transparent"
		},
		{
			"tag": "~",
			"color": "#BE00FF",
			"strikethrough": false,
			"backgroundColor": "transparent"
		},
		{
			"tag": "todo",
			"color": "#FF8C00",
			"strikethrough": false,
			"backgroundColor": "transparent"
		}
	],

	"color-highlight.useARGB": true,

	"codedox": {
		"commentprefix": "    ",
		"commentdescription": "",
		"commentend": "**/",
		"alwaysMultiline": false,
		"paramFormat": "",
		"returnFormat": "",
		"neverAskTemplate": true
	},
	"files.watcherExclude": {
		"**/project/lib/**": true
	},
	"C_Cpp.autoAddFileAssociations": false,
	"cmake.configureOnOpen": false
}
